{
  "name": "crossdeck",
  "version": "0.0.1",
  "description": "Dedicated X (Twitter) browser with vertical split tabs and multi-profile support",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc && cp src/index.html dist/ && cp src/styles.css dist/",
    "start": "npm run build && electron .",
    "dev": "npm run build && electron . --dev",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder"
  },
  "keywords": [
    "electron",
    "twitter",
    "x",
    "browser"
  ],
  "author": "",
  "license": "MIT",
  "build": {
    "appId": "com.crossdeck.app",
    "productName": "crossdeck",
    "mac": {
      "category": "public.app-category.social-networking",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "universal"
          ]
        }
      ]
    },
    "linux": {
      "target": "AppImage"
    },
    "win": {
      "target": "nsis"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    }
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.3.0"
  }
}
